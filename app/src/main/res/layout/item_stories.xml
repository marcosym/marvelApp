<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="100dp"
        android:background="@android:color/transparent"
        android:id="@+id/card_view_comics"
        android:layout_marginEnd="16dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="10dp"
        android:layout_height="160dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@android:color/transparent"
            android:layout_height="match_parent">

        <ImageView
                android:layout_width="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_splash_intro"
                android:layout_height="120dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="ContentDescription"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/img_card_comics"/>

        <TextView android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="0dp"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintTop_toBottomOf="@+id/img_card_comics"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="8dp"
                  android:id="@+id/title_card_comics"
                  android:maxLines="2"
                  tools:text="AAAAAAAAAAAAaAAA"
                  android:textColor="@android:color/white"
                  android:gravity="center"
                  android:fontFamily="@font/marvel_regular"
                  android:textAllCaps="true"
                  app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginStart="8dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>