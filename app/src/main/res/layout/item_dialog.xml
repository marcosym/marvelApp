<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_height="match_parent">


    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/container_order_dialog"
            android:layout_height="wrap_content" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp">

        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:textColor="@color/red"
                android:layout_marginStart="8dp"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:fontFamily="@font/marvel_regular"
                android:text="Ordenar por data"/>

    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/container_order_dialog2"
            android:layout_height="wrap_content" android:layout_marginTop="0dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp">

        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_weight="1"
                android:fontFamily="@font/marvel_regular"
                android:layout_width="0dp"
                android:layout_marginStart="8dp"
                android:textColor="@color/red"
                android:textAllCaps="true"
                android:layout_height="wrap_content"
                android:text="Resetar"/>

    </LinearLayout>

    </LinearLayout>



</androidx.cardview.widget.CardView>